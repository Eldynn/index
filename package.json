{
  "name": "@eldynn/index",
  "version": "1.0.0",
  "description": "A simple library to handle a directory of users and groups.",
  "main": "./build/index.js",
  "scripts": {
    "test": "npm run build && jest --coverage --colors --bail --expand",
    "test-watch": "npm test -- --watch",
    "send-coverage": "npm test && codacy-coverage < ./coverage/lcov.info",
    "build": "rollup --config",
    "build-watch": "npm run build -- --watch",
    "docs": "typedoc --module \"commonjs\" --out docs src/ && tplant --input src/index.ts > docs/index.puml && bash ./scripts/docs.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eldynn/index.git"
  },
  "keywords": [
    "typescript",
    "library",
    "users",
    "groups"
  ],
  "author": "Robin BAILLARGEAUX",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Eldynn/index/issues"
  },
  "files": [
    "/build/index.js"
  ],
  "homepage": "https://github.com/Eldynn/index#readme",
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.7",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/jest": "^24.0.11",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "codacy-coverage": "^3.4.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "rollup": "^1.9.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.20.1",
    "rollup-plugin-uglify": "^6.0.2",
    "semantic-release": "^15.13.12",
    "tplant": "^2.0.4",
    "ts-jest": "^24.0.2",
    "tslib": "^1.9.3",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.2"
  },
  "browserslist": [
    "> 5%",
    "last 2 versions",
    "not last 2 ie version",
    "not dead"
  ],
  "engines": {
    "node": ">= 11.0.0",
    "npm": ">= 6.0.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "import",
      "jest"
    ],
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint",
      "plugin:jest/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "import/prefer-default-export": 0
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "env": {
      "jest/globals": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": [
      "/tests/.*\\.test\\.ts$",
      "/specs/.*\\.spec\\.ts$"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "collectCoverageFrom": [
      "src/*.ts"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
